<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.Day">
        <item name="taskButtonStyle">@style/buttonStyleLight</item>
        <item name="emergencyButtonStyle">@style/emergencyButtonStyleLight</item>
        <item name="layoutBackgroundStyle">@style/mainLayoutStyleLight</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="android:colorPrimary">@color/action_bar_backgroud_color</item>
        <item name="android:textColorPrimary">@color/action_bar_text_color</item>
    </style>

    <!--<style name="AppTheme.Night">-->
